generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modalidad = Masculino / Femenino
model Modality {
  id   BigInt @id @default(autoincrement())
  name String

  teamModalities TeamModality[]
}

model Team {
  id   BigInt @id @default(autoincrement())
  name String

  players            Player[]
  teamModalities     TeamModality[]
  futsalMatches1     FutsalMatch[]     @relation("futsalTeam1")
  futsalMatches2     FutsalMatch[]     @relation("futsalTeam2")
  volleyballMatches1 VolleyballMatch[] @relation("volleyballTeam1")
  volleyballMatches2 VolleyballMatch[] @relation("volleyballTeam2")
}

model Player {
  id   BigInt @id @default(autoincrement())
  name String

  team   Team   @relation(fields: [teamId], references: [id])
  teamId BigInt
}

model TeamModality {
  id         BigInt   @id @default(autoincrement())
  team       Team     @relation(fields: [teamId], references: [id])
  teamId     BigInt
  modality   Modality @relation(fields: [modalityId], references: [id])
  modalityId BigInt
}

model FutsalMatch {
  id         BigInt   @id @default(autoincrement())
  date       DateTime
  team1      Team     @relation("futsalTeam1", fields: [team1Id], references: [id])
  team1Id    BigInt
  team2      Team     @relation("futsalTeam2", fields: [team2Id], references: [id])
  team2Id    BigInt
  team1Score Int
  team2Score Int
}

model VolleyballMatch {
  id           BigInt   @id @default(autoincrement())
  date         DateTime
  team1        Team     @relation("volleyballTeam1", fields: [team1Id], references: [id])
  team1Id      BigInt
  team2        Team     @relation("volleyballTeam2", fields: [team2Id], references: [id])
  team2Id      BigInt
  team1SetsWon Int
  team2SetsWon Int
}
